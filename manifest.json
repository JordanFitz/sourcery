{
	"name": "Sourcery",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Highlights CSS and JavaScript using http://hightlightjs.org",
	"options_page": "options.html",
	"content_scripts": [{
		"matches": ["*://*/*.css", "*://*/*.js"],
		"js": ["js/highlight.min.js", "js/script.js"],
		"css": ["style.css"]
	}],
	"permissions": [
		"storage"
	],
	"web_accessible_resources": [
		"themes/*.css",
		"themes.json"
	],
	"icons": {
		"16": "img/logo_16.png",
		"64": "img/logo_64.png",
		"128": "img/logo_128.png",
		"512": "img/logo_512.png"
	}
}